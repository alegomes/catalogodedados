<h1>Links</h1>

<table class='border'>
  <tr>
	<th>Órgão</th>
    <th>Tipo link</th>
    <th>Titulo</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
	<td><%= link.orgao.nome if link.orgao %></td>
    <td><%= link.tipo_link.tipo %></td>
    <td><%= link.titulo %></td>
    <td><%= link.url %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, confirm: 'Certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Link', new_link_path, :class => 'button' %>
