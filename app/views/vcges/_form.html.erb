<%= form_for(@vcge) do |f| %>
  <% if @vcge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vcge.errors.count, "error") %> foram encontrados:</h2>

      <ul>
      <% @vcge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :termo_pai %><br />
	<% vcges = Vcge.all
	   vcges.delete(@vcge) 
	%>
    <%= f.collection_select(:termo_pai_id, vcges, :id, :termo) %>
  </div>
  <div class="field">
    <%= f.label :termo %><br />
    <%= f.text_field :termo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
