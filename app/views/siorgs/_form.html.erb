<%= form_for(@siorg) do |f| %>
  <% if @siorg.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@siorg.errors.count, "error") %> foram encontrados:</h2>

      <ul>
      <% @siorg.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :codigo %><br />
    <%= f.text_field :codigo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
